<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Work order</th>
      <th>Job code</th>
      <th>Quantity</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
    <% email = ticket.user ? ticket.user.email : "" %>
      <tr>
        <td><%= ticket.date %></td>
        <td><%= ticket.work_order %></td>
        <td><%= ticket.job_code %></td>
        <td><%= ticket.quantity %></td>
        <td><%= email %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
